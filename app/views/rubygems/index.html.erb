<% @title = "all gems" %>
<% @subtitle = "starting with #{params[:letter]}" %>
<div class="directory border">
  <ol>
    <% ("A".."Z").each do |letter| %><li><%= link_to(letter, rubygems_path(:letter => letter)) %></li><% end %>
  </ol>
</div>
<p class="entries">
  <%= page_entries_info @gems, :entry_name => 'gem' %>
</p>
<div class="gems border">
  <ol>
    <% @gems.each do |gem| %>
    <li>
      <a href="<%= rubygem_url(gem) %>">
        <strong><%= gem %></strong>
        <%= truncate(gem.versions.current.info, :length => 100) %>
      </a>
    </li>
    <% end %>
  </ol>
</div>
<%= will_paginate @gems %>
