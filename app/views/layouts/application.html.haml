!!!
%html
  %head
    %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    %link{:rel => "alternate", :href => "http://feeds.feedburner.com/gemcutter-latest", :type => "application/atom+xml", :title => "Gemcutter | Latest"}
    %title= page_title
    =stylesheet_link_tag("reset", "960", "text", "application")
  %body
    -flash.each do |name, msg|
      %div{:id => "flash_#{name}"}= msg
    .container_12
      .wrap
        .header.grid_12
          %h1
            %a{:href => ""}= @title || title
          %h2= @subtitle || subtitle
          .buttons
            %span.actions
              =link_to "home", root_url
              =link_to "list", rubygems_url
              =link_to "search", search_url
              =link_to "create", page_url("create")
              =link_to "migrate", page_url("migrate")
            %span.account
              -if signed_in?
                =link_to "my gems", mine_rubygems_url
                =link_to "logout", sign_out_path
              -else
                =link_to "login", sign_in_path
                =link_to "register", sign_up_path
        =yield
        .footer.grid_12
          .info
            %a.footer{:href => "http://groups.google.com/group/gemcutter"} Discuss
            %a.footer{:href => "http://github.com/qrush/gemcutter"} Code
            %a.footer{:href => "http://twitter.com/rubygemcutter"} Status
            =link_to "FAQ", page_url("faq"), :class => "footer"
            =link_to "API", page_url("api"), :class => "footer"
          -if @title
            .watermark
              %a{:href => "/"}= title
              %abbr= subtitle
    =javascript_include_tag("jquery", "application")
    :erb
      <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      </script>
      <script type="text/javascript">
      try {
      var pageTracker = _gat._getTracker("UA-10315684-1");
      pageTracker._trackPageview();
      } catch(err) {}</script>
