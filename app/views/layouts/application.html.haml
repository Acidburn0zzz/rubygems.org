!!!
%html
  %head
    %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    %title= @page_title || page_title
    %link{:rel => "stylesheet", :type => "text/css", :media => "all", :href => "/css/reset.css"}
    %link{:rel => "stylesheet", :type => "text/css", :media => "all", :href => "/css/960.css"}
    %link{:rel => "stylesheet", :type => "text/css", :media => "all", :href => "/css/text.css"}
    %link{:rel => "stylesheet", :type => "text/css", :media => "all", :href => "/css/style.css"}
  %body
    -unless flash.empty?
      #flash
      -flash.each do |key, value|
        %div{:id => key}=h value
    .container_12
      .wrap
        .header.grid_12
          %h1
            %a{:href => ""}= @title || title
          %h2= @subtitle || subtitle
          .buttons
            %span.actions
              %a{:href => "/"} home
              %a{:href => "/gems"} list
              %a create
              %a migrate
              %a search
            %span.account
              %a login
              %a register
        =yield
        .footer.grid_12
          .info
            %a.footer{:href => "http://twitter.com/rubygemcutter"} Status
            %a.footer API
            %a.footer Help
            %a.footer{:href => "http://github.com/qrush/gemcutter"} Contribute
          -if @title
            .watermark
              %a{:href => "/"}= title
              %abbr= subtitle

